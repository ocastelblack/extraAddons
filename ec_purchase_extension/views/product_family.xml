<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_family_form" model="ir.ui.view">
        <field name="name">product.family.form</field>
        <field name="model">product.family</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <group>
                            <field  name="name" required="1"/>
                            <field  name="complete_name" invisible="1"/>
                        </group>
                        <group>
                            <field  name="code" required="1"/>
                        </group>
                        
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_product_family_tree" model="ir.ui.view">
        <field name="name">product.family.tree</field>
        <field name="model">product.family</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field  name="complete_name" invisible="1"/>
            </tree>
        </field>
    </record>
    
    <record id="view_product_family_search" model="ir.ui.view">
            <field name="name">product.family.search</field>
            <field name="model">product.family</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <group string="Group By">
                        <filter name="group_by_name" string="Name" context="{'group_by':'name'}"/>
                        <filter name="group_by_code" string="Code" context="{'group_by':'code'}"/>
                    </group>
                </search>
            </field>
    </record>

    <record id="action_product_family_view" model="ir.actions.act_window">
        <field name="name">Product Family</field>
        <field name="res_model">product.family</field>
        <field name="view_mode">tree,form,search</field>
    </record>
    
    <menuitem id="menu_product_family" 
              name="Product Family" 
              action="action_product_family_view"
              groups="purchase.group_purchase_manager"
              parent="stock.menu_product_in_config_stock"/>

</odoo>
