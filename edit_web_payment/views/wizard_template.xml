    <template id="edit_web_payment2" inherit_id="website_sale.address">
        <xpath expr="//form[@class='checkout_autoformat']/div[1]/div[1]" position="before">
            <style>
                .o_horizontal {
                    display: inline-flex;
                }
                .form-check1 {
                    padding-left: 25px;
                }
            </style>
            <div id="edit_website_sale_res_partner" class="mb-3 col-lg-12 ">
                <div name="company_type" role="radiogroup" class="o_horizontal" aria-label="Tipo de compañía">
                    <div class="form-check" >
                        <input type="radio" class="form-check1 " name="radio_field_1"  data-index="0" id="radio_field_1_person"
                            t-attf-checked="{{'True' if not checkout['is_company'] else 'false'}}" />
                        <label class="form-check-label" for="radio_field_1_person">Individual</label>
                    </div>
                    <div class="form-check" >
                        <input type="radio" class="form-check1" name="radio_field_1"  data-index="1" id="radio_field_1_company"
                            t-attf-checked="{{'True' if checkout['is_company'] else 'false'}}"  />
                        <label class="form-check-label" for="radio_field_1_company">Compañía</label>
                    </div>
                </div>
                <div id="tipo_identificacion" class="col-12 py-2  col-lg-6">
                    <label class="col-form-label fw-normal label-optional form-label" ><b>Número de Identificación</b></label>
                    <div t-attf-class="form-group col-lg-6 div_type_identitication">
                        <label class="col-form-label" for="l10n_latam_identification_type">Tipo de Identificación</label>
                        <select name="identification_type_id" t-attf-class="form-select">
                            <t t-foreach="website.get_identification_types()" t-as="identification_type">
                                <t t-set="id_type" t-value="identification_type.id" />
                                <t t-set="id_type_name" t-value="identification_type.name" />
                                <option t-att-value="id_type"  t-att-selected="id_type == website.extract_identification_type_number(checkout['l10n_latam_identification_type_id'])">
                                    <t t-esc="id_type_name" />
                                </option>
                            </t>
                        </select>
                    </div>
                    <div t-attf-class="mb-3 #{error.get('company_name') and 'o_has_error' or ''} col-lg-6 mb-0">
                        <label class="col-form-label fw-normal label-optional" for="company_name">Company Name</label>
                        <input type="text" name="company_name" t-attf-class="form-control #{error.get('company_name') and 'is-invalid' or ''}" t-att-value="'commercial_company_name' in checkout and checkout['commercial_company_name'] or 'company_name' in checkout and checkout['company_name']" t-att-readonly="'1' if vat_warning else None" />
                        <small t-if="vat_warning" class="form-text text-muted d-block d-lg-none">Changing company name is not allowed once document(s) have been issued for your account. Please contact us directly for this operation.</small>
                    </div>
                    <div t-attf-class="mb-3 #{error.get('vat') and 'o_has_error' or ''} col-lg-6 div_vat mb-0">
                        <label class="col-form-label fw-normal label-optional" for="vat">TIN / VAT </label>
                        <input type="text" name="vat" t-attf-class="form-control #{error.get('vat') and 'is-invalid' or ''}" t-att-value="'vat' in checkout and checkout['vat']" t-att-readonly="'1' if vat_warning else None"/>
                        <small t-if="vat_warning" class="form-text text-muted d-block d-lg-none">Changing VAT number is not allowed once document(s) have been issued for your account. Please contact us directly for this operation.</small>
                    </div>
                    <div t-if="vat_warning" class="col-12 d-none d-lg-block mb-1">
                        <small class="form-text text-muted">Changing company name or VAT number is not allowed once document(s) have been issued for your account. Please contact us directly for this operation.</small>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

